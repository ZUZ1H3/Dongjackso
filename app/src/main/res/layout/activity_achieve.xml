            Linearlayout 만들어서 상자와 버튼 + 텍스트 배치
            동화 업적 창 - 스크롤뷰 넣어서 배치 + 보상받으면 계속 업데이트되도록함
            갱신되도록 하는 방법 : 프로그래스바 이용
            -->

            <LinearLayout
                android:id="@+id/writerappellationLayout"
                android:layout_width="830dp"
                android:layout_height="400dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.7">

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/littleWriterLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_trophy_appellation_background" />

                            <ProgressBar
                                android:id="@+id/pb_trophyCount1"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="360dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/pb_trophy" />

                            <TextView
                                android:id="@+id/tv_trophyCount1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="140dp"
                                android:layout_marginTop="27dp"
                                android:fontFamily="@font/ssurround"
                                android:text="트로피 0 / 1"
                                android:textColor="#000000"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/tv_littleWriter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="24dp"
                                android:layout_marginRight="210dp"
                                android:fontFamily="@font/ssurround"
                                android:text="꼬마 작가"
                                android:textColor="#000000"
                                android:textSize="35sp" />

                            <ImageButton
                                android:id="@+id/ib_littleWriter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="30dp"
                                android:background="@drawable/ic_btn_appellation_locked"
                                android:button="@null"
                                android:contentDescription="꼬마 작가 사용 버튼" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/beginnerWriterLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_trophy_appellation_background" />

                            <ProgressBar
                                android:id="@+id/pb_trophyCount5"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="360dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/pb_trophy" />

                            <TextView
                                android:id="@+id/tv_trophyCount5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="140dp"
                                android:layout_marginTop="27dp"
                                android:fontFamily="@font/ssurround"
                                android:text="트로피 0 / 5"
                                android:textColor="#000000"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/tv_beginnerWriter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="24dp"
                                android:layout_marginRight="190dp"
                                android:fontFamily="@font/ssurround"
                                android:text="새내기 작가"
                                android:textColor="#000000"
                                android:textSize="35sp" />

                            <ImageButton
                                android:id="@+id/ib_beginnerWriter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="30dp"
                                android:background="@drawable/ic_btn_appellation_locked"
                                android:button="@null"
                                android:contentDescription="새내기 작가 사용 버튼" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/veteranWriterLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_trophy_appellation_background" />

                            <ProgressBar
                                android:id="@+id/pb_trophyCount10"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="360dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/pb_trophy" />

                            <TextView
                                android:id="@+id/tv_trophyCount10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="140dp"
                                android:layout_marginTop="27dp"
                                android:fontFamily="@font/ssurround"
                                android:text="트로피 0 / 10"
                                android:textColor="#000000"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/tv_veteranWriter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="24dp"
                                android:layout_marginRight="190dp"
                                android:fontFamily="@font/ssurround"
                                android:text="베테랑 작가"
                                android:textColor="#000000"
                                android:textSize="35sp" />

                            <ImageButton
                                android:id="@+id/ib_veteranWriter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="30dp"
                                android:background="@drawable/ic_btn_appellation_locked"
                                android:button="@null"
                                android:contentDescription="베테랑 작가 사용 버튼" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/masterWriterLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="20dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_trophy_appellation_background" />

                            <ProgressBar
                                android:id="@+id/pb_trophyCount50"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="360dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/pb_trophy" />

                            <TextView
                                android:id="@+id/tv_trophyCount50"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="140dp"
                                android:layout_marginTop="27dp"
                                android:fontFamily="@font/ssurround"
                                android:text="트로피 0 / 50"
                                android:textColor="#000000"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/tv_masterWriter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="24dp"
                                android:layout_marginRight="190dp"
                                android:fontFamily="@font/ssurround"
                                android:text="마스터 작가"
                                android:textColor="#000000"
                                android:textSize="35sp" />

                            <ImageButton
                                android:id="@+id/ib_masterWriter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="30dp"
                                android:background="@drawable/ic_btn_appellation_locked"
                                android:button="@null"
                                android:contentDescription="마스터 작가 사용 버튼" />
                        </FrameLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>