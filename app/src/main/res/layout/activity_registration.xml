    <!--헤어 레이아웃-->
    <LinearLayout
        android:id="@+id/hairlayout"
        android:layout_width="700dp"
        android:layout_height="475dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.883" >
        <HorizontalScrollView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <RadioGroup
                android:id="@+id/rg_hair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/hairlayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.775"
                app:layout_constraintHorizontal_bias="0.884" >

                <LinearLayout
                    android:id="@+id/containerlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/hll_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/rb_g_long"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:button="@drawable/rb_hair_g_long" />
                        <RadioButton
                            android:id="@+id/rb_b_hook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_gravity="center"
                            android:button="@drawable/rb_hair_b_hook" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/hll_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/rb_g_pigtails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:button="@drawable/rb_hair_g_pigtails" />
                        <RadioButton
                            android:id="@+id/rb_b_hedgehog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:button="@drawable/rb_hair_b_hedgehog" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/hll_third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <RadioButton
                            android:id="@+id/rb_g_twinbuns"
                            android:layout_width="wrap_content"
                            android:layout_height="157dp"
                            android:layout_margin="20dp"
                            android:button="@drawable/rb_hair_g_twinbuns" />
                        <RadioButton
                            android:id="@+id/rb_b_broccoli"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_gravity="center"
                            android:button="@drawable/rb_hair_b_broccoli" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/hll_fourth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <RadioButton
                            android:id="@+id/rb_g_short"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:button="@drawable/rb_hair_g_short" />
                        <RadioButton
                            android:id="@+id/rb_b_gourd"
                            android:layout_width="wrap_content"
                            android:layout_height="145dp"
                            android:layout_margin="20dp"
                            android:layout_gravity="center"
                            android:button="@drawable/rb_hair_b_gourd" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/hll_fifth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <RadioButton
                            android:id="@+id/rb_g_twintail"
                            android:layout_width="wrap_content"
                            android:layout_height="155dp"
                            android:layout_margin="20dp"
                            android:button="@drawable/rb_hair_g_twintail" />
                        <RadioButton
                            android:id="@+id/rb_b_chestnut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_gravity="center"
                            android:button="@drawable/rb_hair_b_chestnut" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/hll_sixth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <RadioButton
                            android:id="@+id/rb_hair_g_ponytail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:button="@drawable/rb_hair_g_ponytail" />
                        <RadioButton
                            android:id="@+id/rb_hair_b_twohooks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_gravity="center"
                            android:button="@drawable/rb_hair_b_twohooks" />
                    </LinearLayout>
                </LinearLayout>
            </RadioGroup>
        </HorizontalScrollView>
    </LinearLayout>

    <!--헤어 레이아웃을 만들어서 입혀진 부분 헤어만 모아놓기-->
