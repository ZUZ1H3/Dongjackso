    android:background="@drawable/bg_registration">
    <TextView
        android:id="@+id/tv_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작가 등록"
        android:textSize="90dp"
        android:fontFamily="@font/ssurround"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintHorizontal_bias="0.05"/>
    <ImageButton
        android:id="@+id/ib_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0000"
        android:contentDescription="다음"
        android:src="@drawable/ic_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_registration"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.95" />
    <!--머리/옷/염색 카테고리 이미지 버튼-->
    <ImageButton
        android:id="@+id/ib_hair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_btn_hair2"
        android:backgroundTint="#0000"
        android:contentDescription="머리"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_registration"
        app:layout_constraintVertical_bias="0.196"
        app:layout_constraintHorizontal_bias="0.479" />
    <ImageButton
        android:id="@+id/ib_clothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_btn_clothes2"
        android:backgroundTint="#0000"
        android:contentDescription="옷"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ib_hair"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.717" />
    <ImageButton
        android:id="@+id/ib_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_btn_color2"
        android:backgroundTint="#0000"
        android:contentDescription="염색"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ib_clothes"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.953" />

    <!--그림자/캐릭터 이미지뷰-->
    <ImageView
        android:id="@+id/scaffolding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_scaffolding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_registration"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintHorizontal_bias="0.15" />

    <!--캐릭터 전체 몸+얼굴+눈동자 하나의 이미지
    <ImageView
        android:id="@+id/character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
