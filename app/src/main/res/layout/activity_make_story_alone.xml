<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeStoryAloneActivity"
    android:background="#94C7D3" >

    <ImageButton
        android:id="@+id/ib_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_before_btn"
        android:backgroundTint="#0000"
        android:contentDescription="이전버튼"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/ib_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next_btn"
        android:backgroundTint="#0000"
        android:contentDescription="다음버튼"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.995"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/ib_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_stopmaking"
        android:backgroundTint="#0000"
        android:contentDescription="그만버튼"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.985"
        app:layout_constraintVertical_bias="0.02" />

    <ImageView
        android:id="@+id/iv_story_book"
        android:layout_width="1050dp"
        android:layout_height="700dp"
        android:src="@drawable/ic_story_book"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/tv_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ssurround"
        android:textSize="100dp"
        android:textColor="#94C7D3"
        android:hint="1장"
        android:textColorHint="#94C7D3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.25"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_bookmark_ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_bookmark_ai"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintVertical_bias="0.045" />

    <ImageView
        android:id="@+id/iv_bookmark_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_bookmark_mic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintVertical_bias="0.058" />

    <ImageView
        android:id="@+id/iv_bookmark_null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bookmark_null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.338"
        app:layout_constraintVertical_bias="0.073" />

    <ImageView
        android:id="@+id/iv_bookmark_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_bookmark_ok"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintVertical_bias="0.051" />

    <ImageView
        android:id="@+id/iv_bookmark_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_bookmark_write"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintVertical_bias="0.0445" />

    <ScrollView
        android:id="@+id/sv_story"
        android:layout_width="400dp"
        android:layout_height="450dp"
        android:contentDescription="이야기"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintVertical_bias="0.5" >

        <TextView
            android:id="@+id/tv_story_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hakgyoansim"
            android:textSize="28dp"
            android:textColorHint="@color/black"
            android:hint="현쓰바리는 서대문구에 사는 어예쁜 소녀였어요. 현이는 웨이브진 갈색 머리를 찰랑이며 동네를 산책하는 걸 즐겼지요. 그러다 동네의 작은 커피숍 '만월경'에서 카라멜 마끼야또 한 잔의 여유를 아는 품격 있는 여자이기도 했지요. 그치만 혼자 먹는 카라멜 마끼야또는 그렇게 맛있지 않아요. 뭐든 나눌수록 달달한 법! 현이 가장 좋아하는 동네 친구 민서 언니랑 노나 먹으면 그곳이 천국인지"
            android:lineSpacingExtra="30dp"
            android:padding="20dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.792"
            app:layout_constraintVertical_bias="0.5"
            android:visibility="invisible"/>
    </ScrollView>

    <ImageView
        android:id="@+id/iv_alone_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_story_alone_mic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintVertical_bias="0.55"
        android:visibility="invisible" />

    <com.example.holymoly.StrokeText
        android:id="@+id/tv_howabout"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="이런 이야기는 어때요?"
        android:padding="10dp"
        android:gravity="center"
        android:fontFamily="@font/ssurround"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:textStroke="true"
        app:textStrokeColor="#6B9FA3"
        app:textStrokeWidth="17"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintVertical_bias="0.22"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_alert"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintVertical_bias="0.305"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작이 어렵다면 AI가 1장을 만들어 드릴게요!\n아래 이야기를 적용하려면 적용버튼을 눌러주세요"
        android:fontFamily="@font/ssurround"
        android:textColor="#A6A6A6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintVertical_bias="0.3"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_again"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintVertical_bias="0.3"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_create"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintVertical_bias="0.5"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_create_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_create_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintVertical_bias="0.77"
        android:visibility="invisible" />

    <ScrollView
        android:id="@+id/sv_create_bg"
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:contentDescription="배경"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.215"
        app:layout_constraintVertical_bias="0.752"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_create_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hakgyoansim"
            android:textSize="24sp"
            android:text="안녕하세요?\n저는 김밈섬입니다. 여러분 모두 행복한 하루를 보내세요?\n오늘은 선물입니다. 오늘 같은 선물은 언제 다시 돌아올지 몰라요!"
            android:lineSpacingExtra="17dp"
            android:padding="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.215"
            app:layout_constraintVertical_bias="0.752"
            android:visibility="invisible" >
        </TextView>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>