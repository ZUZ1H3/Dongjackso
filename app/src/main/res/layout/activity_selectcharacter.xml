<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".SelectcharacterActivity">

    <ImageView
        android:id="@+id/iv_container"
        android:layout_width="315dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_contain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mini_profile"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_container"
        app:layout_constraintVertical_bias="0.018" />

    <TextView
        android:id="@+id/mini_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ssurround"
        android:text="어쩌구 작가"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_container"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/mini_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ssurround"
        android:gravity="center"
        android:hint="어린이"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mini_level"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/mini_nickname"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ssurround"
        android:gravity="center"
        android:text="꼬마 작가"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/mini_name"
        app:layout_constraintTop_toTopOf="@id/mini_name"
        app:layout_constraintVertical_bias="0.2" />

    <!--오른쪽 상단에 있는 이미지 버튼들-->
    <ImageButton
        android:id="@+id/ib_trophy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0000"
        android:contentDescription="트로피"
        android:src="@drawable/ic_trophy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_container"
        app:layout_constraintVertical_bias="0" />

    <ImageButton
        android:id="@+id/ib_homebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0000"
        android:contentDescription="홈버튼"
        android:src="@drawable/ic_homebutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ib_trophy"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@id/ib_trophy"
        app:layout_constraintVertical_bias="0" />

    <ImageButton
        android:id="@+id/ib_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0000"
        android:contentDescription="환경설정"
        android:src="@drawable/ic_setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/ib_trophy"
        app:layout_constraintTop_toTopOf="@id/ib_trophy"
        app:layout_constraintVertical_bias="0" />

    <!--오른쪽 아래 다음 단계 화살표 버튼-->
    <ImageButton
        android:id="@+id/ib_nextStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0000"
        android:contentDescription="환경설정"
        android:src="@drawable/ic_nextstep"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"

    <!-- 등장인물 RadioGroup -->

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ssurround"
        android:gravity="center"
        android:text="등장인물"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.377" />

    <RadioGroup
        android:id="@+id/radioGroupCharacters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_chooseChracter"
        app:layout_constraintBottom_toTopOf="@id/ib_nextStep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">


    </RadioGroup>

    <LinearLayout
        android:id="@+id/charlayout"
        android:layout_width="900dp"
        android:layout_height="550dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintHorizontal_bias="0.5" >

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RadioGroup
                android:id="@+id/rg_charname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.884"
                app:layout_constraintStart_toStartOf="@id/hairlayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.775">

                <LinearLayout
                    android:id="@+id/containerlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/hll_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/charname1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:background="@drawable/radio_village"
                            android:button="@null"
                            android:fontFamily="@font/ssurround"
                            android:text="마을"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="40dp" />

                        <RadioButton
                            android:id="@+id/charname2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:background="@drawable/radio_village"
                            android:button="@null"
                            android:fontFamily="@font/ssurround"
                            android:text="마을"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="40dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hll_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/charname3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:background="@drawable/radio_village"
                            android:button="@null"
                            android:fontFamily="@font/ssurround"
                            android:text="마을"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="40dp" />

                        <RadioButton
                            android:id="@+id/charname4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:background="@drawable/radio_village"
                            android:button="@null"
                            android:fontFamily="@font/ssurround"
                            android:text="마을"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="40dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hll_third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/charname5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:background="@drawable/radio_village"
                            android:button="@null"
                            android:fontFamily="@font/ssurround"
                            android:text="마을"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="40dp" />

                        <RadioButton
                            android:id="@+id/charname6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:background="@drawable/radio_village"
                            android:button="@null"
                            android:fontFamily="@font/ssurround"
                            android:text="마을"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="40dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hll_fourth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/charname7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:background="@drawable/radio_village"
                            android:button="@null"
                            android:fontFamily="@font/ssurround"
                            android:text="마을"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="40dp" />

                        <RadioButton
                            android:id="@+id/charname8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:background="@drawable/radio_village"
                            android:button="@null"
                            android:fontFamily="@font/ssurround"
                            android:text="마을"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="40dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hll_fifth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/charname9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:background="@drawable/radio_village"
                            android:button="@null"
                            android:fontFamily="@font/ssurround"
                            android:text="마을"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="40dp" />

                        <RadioButton
                            android:id="@+id/charname10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:background="@drawable/radio_village"
                            android:button="@null"
                            android:fontFamily="@font/ssurround"
                            android:text="마을"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="40dp"/>
                    </LinearLayout>
                </LinearLayout>
            </RadioGroup>
        </HorizontalScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
