<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_diary"
    tools:context=".MakeDiaryActivity">

    <ImageView
        android:layout_width="577dp"
        android:layout_height="621dp"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="100dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/background_image_view"
        android:layout_width="571dp"
        android:layout_height="615dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="103dp"
        android:contentDescription="@string/background_image_description"
        android:foregroundGravity=""
        android:scaleType="centerCrop"
        android:src="@drawable/ic_touch"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />


    <TextView
        android:id="@+id/storyTextView"
        android:layout_width="640dp"
        android:layout_height="460dp"
        android:fontFamily="@font/yeongdeok"
        android:gravity="left"
        android:lineSpacingExtra="16dp"
        android:lineSpacingMultiplier="1.7"
        android:padding="16dp"
        android:scrollbars="vertical"
        android:text="일기 동화를 생성 중입니다..."
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935" />

    <TextView
        android:id="@+id/dayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/ssurround"
        android:gravity="left"
        android:text="8월 20일 목"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/ib_stopMaking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0000"
        android:contentDescription="그만만들기"
        android:src="@drawable/ic_stopmaking2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034">

        <RadioButton
            android:id="@+id/ib_sunny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@drawable/radio_button_sunny"
            android:button="@android:color/transparent" />

        <RadioButton
            android:id="@+id/ib_suncloudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@drawable/radio_button_suncloudy"
            android:button="@android:color/transparent" />

        <RadioButton
            android:id="@+id/ib_cloudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@drawable/radio_button_cloudy"
            android:button="@android:color/transparent" />

        <RadioButton
            android:id="@+id/ib_rainy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@drawable/radio_button_rainy"
            android:button="@android:color/transparent" />

        <RadioButton
            android:id="@+id/ib_snowy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@drawable/radio_button_snowy"
            android:button="@android:color/transparent" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>